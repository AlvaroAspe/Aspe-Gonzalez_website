{
  "name": "Aspe&Gonzalez Website",
  "version": "1.0.0",
  "description": "Aspe&Gonzalez Ltd. portfolio project",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "eleventy:default": "npx eleventy",
    "eleventy:watch": "npx eleventy --watch",
    "serve": "light-server -c .lightserverrc",
    "dev": "npm-run-all clean eleventy:default --parallel eleventy:watch serve --print-label",
    "build": "run-s clean eleventy:default --print-label",
    "build-pcss": "postcss scr/assets/styles/styles.css -o outputDir/css/styles.min.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlvaroAspe/Aspe-Gonzalez_website"
  },
  "author": "Alvaro Aspe",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy-navigation": "^0.1.5",
    "light-server": "2.6.4",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.9.0",
    "npm-run-all": "^4.1.5"
  }
}
